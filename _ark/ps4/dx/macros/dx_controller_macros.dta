   {dx_file_delete "settings/controller/binding/pad/ghdrum.dta"}
   {dx_emu_file_delete "settings/controller/binding/pad" "rbgtr.dta"}
   {dx_emu_file_delete "settings/controller/binding/pad" "rbdrum.dta"}
   {dx_emu_file_delete "settings/controller/binding/pad" "rb4gtr.dta"}
   {dx_emu_file_delete "settings/controller/binding/pad" "rb4drum.dta"}
   {dx_emu_file_delete "settings/controller/binding/pad" "ghgtr.dta"}
   {dx_emu_file_delete "settings/controller/binding/pad" "ghdrum.dta"}
