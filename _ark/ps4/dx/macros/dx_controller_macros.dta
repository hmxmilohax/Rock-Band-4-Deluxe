#define WRITE_SLOT_DTA
(
   {write_file {sprint "data:/GoldHen/RB4DX-1.08/settings/controller/type/" $slot_changed "/" $slot_to ".dta"} ()}
)

#define SET_SLOT_VAR
(
   {switch $slot_changed
      (gtr
         {set $gtrslt $slot_to}
      )
      (drum
         {set $drmslt $slot_to}
      )
      (vox
         {set $voxslt $slot_to}
      )
   }
)

#define CLEAR_SLOT_DTAS
(
   {switch $slot_changed
      (gtr
         {dx_file_delete "settings/controller/type/gtr/drum.dta"}
         {dx_file_delete "settings/controller/type/gtr/vox.dta"}
         {dx_emu_file_delete "settings/controller/type/gtr" "drum.dta"}
         {dx_emu_file_delete "settings/controller/type/gtr" "vox.dta"}
      )
      (drum
         {dx_file_delete "settings/controller/type/drum/gtr.dta"}
         {dx_file_delete "settings/controller/type/drum/vox.dta"}
         {dx_emu_file_delete "settings/controller/type/drum" "gtr.dta"}
         {dx_emu_file_delete "settings/controller/type/drum" "vox.dta"}
      )
      (vox
         {dx_file_delete "settings/controller/type/vox/gtr.dta"}
         {dx_file_delete "settings/controller/type/vox/drum.dta"}
         {dx_emu_file_delete "settings/controller/type/vox" "gtr.dta"}
         {dx_emu_file_delete "settings/controller/type/vox" "drum.dta"}
      )
   }
)

#define CLEAR_INVALID_SLOT_DTAS
(
   {dx_file_delete "settings/controller/type/vox/vox.dta"}
   {dx_file_delete "settings/controller/type/drum/drum.dta"}
   {dx_file_delete "settings/controller/type/gtr/gtr.dta"}
   {dx_emu_file_delete "settings/controller/type/vox" "vox.dta"}
   {dx_emu_file_delete "settings/controller/type/drum" "drum.dta"}
   {dx_emu_file_delete "settings/controller/type/gtr" "gtr.dta"}
)

#define DELETE_PAD_BINDING_DTAS
